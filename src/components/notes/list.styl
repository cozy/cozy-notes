.empty { 
    position: relative
    transform: translateZ(0)
    height: 500px
    display: flex
}

.tableCell {
    flex-grow 1
}

.tableCellName {
    flex-grow 10
}
.tableRowEmpty {
    flex 1
    //Cozy UI tables add border bottom to the latest child. 
    //Since when we display the empty row we have only one,
    //let's hide it
    border-bottom 0 !important
    &:hover {
        background-color inherit
    }
}
.tableCellEmpty {
    flex-grow 1
}